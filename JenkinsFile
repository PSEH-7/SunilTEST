node('master') {
    checkout scm
    
	stage('Compile stage') {
         sh "mvn clean -U install" 
    }
    stage('test') {
    	sh "mvn test"
    } 
	stage('Build') {
		sh "docker build -t sapient_wheather_report ."
    }
	stage('run') {
		sh 'docker ps -f name=sapient_wheather_report -q | xargs --no-run-if-empty docker container stop'
		sh 'docker container ls -a -fname=sapient_wheather_report -q | xargs -r docker container rm'
        sh "docker run -d  -m 2048M -p 8080:8080 --name football -i -t sapient_wheather_report:latest"
        echo "docker run successful"
    }
 }
 
